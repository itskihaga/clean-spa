{
    "compilerOptions": {
      "sourceMap": true,
      // TSはECMAScript 5に変換
      "strict": true, 
      "target": "ES5",
      // TSのモジュールはES Modulesとして出力
      "module": "es2015",
      "moduleResolution": "node",
      "lib": [
        "es2017",
        "dom"
      ],
      "baseUrl":".",
      "rootDir": ".",
      "paths": {
        "zenra-spa": ["src/index.ts"]
      },
      "typeRoots": ["node_modules/@types"],
      "outDir":"./public",
      "declaration": true
    },
    "exclude": [
      "node_modules","public","sample"
    ]
  }